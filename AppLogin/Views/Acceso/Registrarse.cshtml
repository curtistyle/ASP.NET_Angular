@using AppLogin.Models.ViewModels;
@model UsuarioViewModel;



<div class="row mt-5 justify-content-center">
	<div class="col-sm-4">
		<div class="card">
			<div class="card-header">Registrarse</div>
			<div class="card-body">
				<form asp-controller="Acceso" asp-action="Registrarse" method="post">
					<input class="form-control mb-3" type="text" placeholder="Nombre Completo" required asp-for="NombreCompleto"/>	
					<input class="form-control mb-3" type="text" placeholder="Correo" required asp-for="Correo"/>	
					<input class="form-control mb-3" type="password" placeholder="Contraseña" required asp-for="Clave" />	
					<input class="form-control mb-3" type="password" placeholder="Repetir Contraseña" required asp-for="ConfirmarClave" />
					<div class="d-drid gap-2 mb-3">
						<button class="btn btn-primary" type="submit">Registrarse</button>
					</div>

					@if(ViewData["Mensaje"] != null)
					{
						<div class="alert alert-danger" role="alert">
							@ViewData["Mensaje"]
						</div>
					}
					¿Ya tienes una cuenta? <a asp-controller="Acceso" asp-action="Login">Iniciar Sesion</a>
				</form>
			</div>
		</div>
	</div>
</div>